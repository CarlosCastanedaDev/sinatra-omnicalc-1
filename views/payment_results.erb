<h1>Payment Results</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= params.fetch('user_apr').to_i.to_fs(:percentage, { :precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= params.fetch('user_years') %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= params.fetch('user_pv').to_i.to_fs(:currency) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%=  (@numerator/@denominator).round(2).to_fs(:currency) %>
  </dd>
</dl>

<a href="/payment/new">Calculate another payment</a>
